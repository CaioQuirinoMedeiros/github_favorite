{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["react-app", "standard"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["import", "jsx-ally", "react"],
  "rules": {
    "react/jsx-filename-extension": ["error", { "extends": [".js", ".jsx"] }],
    "import/prefer-default-export": "off",
    "react/jsx-one-expression-per-line": "off"
  }
}
